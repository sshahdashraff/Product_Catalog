@model ProductCatalog.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="bi bi-tags"></i> Category Details</h3>
        <span class="badge bg-light text-dark fs-6">ID: @Model.Id</span>
    </div>
    <div class="card-body p-4">
        <dl class="row fs-5">
            <dt class="col-sm-4"><i class="bi bi-tag-fill"></i> Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>
        </dl>
    </div>
    <div class="card-footer bg-light d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2 text-white">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg me-2">
            <i class="bi bi-trash"></i> Delete
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
