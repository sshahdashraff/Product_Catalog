@model ProductCatalog.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-header bg-success text-white">
        <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Category</h3>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label class="form-label fw-semibold"><i class="bi bi-tags"></i> Category Name</label>
                <input asp-for="Name" class="form-control form-control-lg shadow-sm" placeholder="Enter category name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-lg px-4 me-2">
                    <i class="bi bi-check-circle"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
