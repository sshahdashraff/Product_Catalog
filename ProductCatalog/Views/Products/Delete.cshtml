@model ProductCatalog.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="card shadow-lg border-0 rounded-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h3>
    </div>
    <div class="card-body p-4">
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-circle"></i>
            You are about to permanently delete this product. This action cannot be undone.
        </div>

        <ul class="list-group mb-3">
            <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
            <li class="list-group-item"><strong>SKU:</strong> @Model.Sku</li>
            <li class="list-group-item"><strong>Price:</strong> $@Model.Price</li>
            <li class="list-group-item"><strong>Category:</strong> @Model.Category?.Name</li>
        </ul>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                <i class="bi bi-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
