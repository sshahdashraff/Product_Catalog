@model IEnumerable<ProductCatalog.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary"><i class="bi bi-box-seam-fill"></i> Products</h2>
    <a class="btn btn-primary shadow-sm" href="/Products/Create">
        <i class="bi bi-plus-circle me-1"></i> Add New
    </a>
</div>

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-body p-0">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th class="text-center" style="width: 180px">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">@item.Name</td>
                    <td><span class="badge bg-success">$@item.Price</span></td>
                    <td><span class="badge bg-info">@item.Category?.Name</span></td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-outline-warning me-1" 
                           href="/Products/Edit/@item.Id" data-bs-toggle="tooltip" title="Edit">
                           <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-sm btn-outline-danger" 
                           href="/Products/Delete/@item.Id" data-bs-toggle="tooltip" title="Delete">
                           <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
